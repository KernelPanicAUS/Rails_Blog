{
   "$schema":"https://docs.renovatebot.com/renovate-schema.json",
   "extends":[
      "config:base",
      "helpers:pinGitHubActionDigests",
      "group:rubyOnRails",
      ":semanticCommits"
   ],
   "rebaseStalePrs":true,
   "ruby-version":{
      "fileMatch":[
         "(^|/)Gemfile$",
         "(^|/)Gemfile.lock$"
      ]
   },
   "packageRules":[
      {
         "updateTypes":[
            "minor",
            "patch",
            "digest",
            "pin"
         ],
         "automerge":true
      }
   ],
   "labels":[
      "renovate",
      "dependency-update"
   ]
}
