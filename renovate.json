{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    "group:rubyOnRails",
    ":semanticCommits"
  ],
  "rebaseStalePrs": true,
  "packageRules": [
    {
      "fileMatch": [
        "(^|/)Gemfile$",
        "(^|/)Gemfile.lock$"
      ],
    "versioning": "ruby",
      "updateTypes": [
        "minor",
        "patch",
        "digest",
        "pin"
      ],
      "automerge": true
    },
  ],
  "labels": ["renovate", "dependency-update"]
}
